# Splunk MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SPLUNK CONNECTION (Required)
# =============================================================================

# Splunk host URL (without trailing slash)
SPLUNK_HOST=https://your-splunk-instance.com:8089

# Splunk authentication - Option 1: Token (recommended)
SPLUNK_TOKEN=your-splunk-auth-token

# Splunk authentication - Option 2: Username/Password
# SPLUNK_USERNAME=admin
# SPLUNK_PASSWORD=your-password

# =============================================================================
# SPLUNK OPTIONS
# =============================================================================

# Default Splunk app context (optional)
SPLUNK_APP=search

# Default Splunk owner (optional)
SPLUNK_OWNER=admin

# SSL verification (set to false for self-signed certs in air-gapped env)
SPLUNK_VERIFY_SSL=true

# Connection timeout in milliseconds
SPLUNK_TIMEOUT=30000

# =============================================================================
# AWS SECRETS MANAGER (Optional - for production)
# =============================================================================

# If set, credentials will be fetched from AWS Secrets Manager
# AWS_SECRETS_SECRET_NAME=splunk/mcp-server/credentials
# AWS_SECRETS_REGION=us-east-1

# =============================================================================
# SEARCH DEFAULTS
# =============================================================================

# Maximum events to return per search
MAX_RESULTS=1000

# Default time range for searches
DEFAULT_EARLIEST_TIME=-24h
DEFAULT_LATEST_TIME=now

# Search job timeout in seconds
SEARCH_TIMEOUT=300

# =============================================================================
# TRUST SCORING
# =============================================================================

# Trust score thresholds (0.0 to 1.0)
TRUST_THRESHOLD_PROCEED=0.7
TRUST_THRESHOLD_CAUTION=0.4

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable audit logging
ENABLE_AUDIT_LOG=true

# =============================================================================
# SERVER
# =============================================================================

# ETL version for compatibility tracking
ETL_VERSION=1.0.0
